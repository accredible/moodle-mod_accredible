{{!
    @template mod_accredible/mappings

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "mappings": [
            {
                "index": 1,
                "id": 2,
                "field": "moodle_course",
                "accredibleattribute": "acc_course"
            },
        ],
        "accredibleoptions": [ { "name": "Course Duration", "value": "course_duration" } ],
        "moodleoptions": [ { "name": "Moodle Course Duration", "value": "moodle_course_duration" } ],
        "section": "coursefieldmapping",
        "hasmappings": false,
        "hasid": false
    }
}}
<div class="attribute_mapping d-flex flex-column">
    <div id="{{section}}_content">
        {{#hasmappings}}
            {{#mappings}}
                {{> mod_accredible/mapping_line}}
            {{/mappings}}
        {{/hasmappings}}
    </div>

    <div class="col-md-12">
        <button type="button" id="{{section}}_add_new_line" data-section="{{section}}" class="mt-4 mb-4 btn btn-outline-primary btn-small">Add</button>
    </div>
</div>

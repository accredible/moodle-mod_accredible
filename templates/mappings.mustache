{{!
    @template mod_accredible/mappings

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "section": "coursefieldmapping",
        "hasmappings": false,
        "mappings": [
            { "index": 1, "id": 2, "field": "moodle_course", "accredibleattribute": "acc_course" }
        ],
        "accredibleoptions": [
            { "name": "Select Accredible attribute", "value": "" },
            { "name": "Course Duration", "value": "course_duration" }
        ],
        "moodleoptions": [
            { "name": "Select Moodle attribute", "value": "" },
            { "name": "Moodle Course Duration", "value": "moodle_course_duration" }
        ],
        "hasid": false,
        "noprofileoptions": false,
        "nocoursecustomoptions": false
    }
}}
<div class="attribute_mapping d-flex flex-column">
    <div id="{{section}}_content">
        {{#hasmappings}}
            {{#mappings}}
                {{> mod_accredible/mapping_line}}
            {{/mappings}}
        {{/hasmappings}}
    </div>

    <div class="col-md-12">
        {{#nocoursecustomoptions}}
        <div class="alert alert-warning">
            <div>Add Course custom fields to be able to map them.</div>
        </div>
        {{/nocoursecustomoptions}}
        {{#noprofileoptions}}
        <div class="alert alert-warning">
            <div>Add User profile fields to be able to map them.</div>
        </div>
        {{/noprofileoptions}}
    </div>

    <div class="col-md-12">
        <button type="button" id="{{section}}_add_new_line" data-section="{{section}}" class="mt-4 mb-4 btn btn-outline-primary btn-small">Add</button>
    </div>

    <template id="template_{{section}}">
        <select name="accredibleoptions_select" id="accredibleoptions_select">
            {{#accredibleoptions}}
            <option value="{{value}}">{{name}}</option>
            {{/accredibleoptions}}
        </select>

        <select name="moodleoptions_select" id="moodleoptions_select">
            {{#moodleoptions}}
            <option value="{{value}}">{{name}}</option>
            {{/moodleoptions}}
        </select>
    </template>
</div>

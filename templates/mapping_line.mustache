{{!
    @template mod_accredible/mapping_line

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "index": 1,
        "id": 1,
        "field": "moodle_course",
        "accredibleattribute": "acc_course"
    }
}}
<div class="d-flex flex-row justify-content-between mb-2" id="{{section}}_mapping_line_{{index}}">
    {{#hasid}}
    <div class="d-flex flex-column col-md-5">
        <label for="id_{{section}}_{{index}}_id">Moodle Attribute</label>
        <select class="form-control" name="{{section}}[{{index}}][id]" id="id_{{section}}_{{index}}_id" data-initial-value="{{id}}">
            {{#moodleoptions}}
                <option value="{{value}}">{{name}}</option>
            {{/moodleoptions}}
        </select>
    </div>
    {{/hasid}}

    {{^hasid}}
    <div class="d-flex flex-column col-md-5">
        <label for="id_{{section}}_{{index}}_field">Moodle Attribute</label>
        <select class="form-control" name="{{section}}[{{index}}][field]" id="id_{{section}}_{{index}}_field" data-initial-value="{{field}}">
            {{#moodleoptions}}
                <option value="{{value}}">{{name}}</option>
            {{/moodleoptions}}
        </select>
    </div>
    {{/hasid}}

    <div class="d-flex flex-column col-md-6">
        <label for="id_{{section}}_{{index}}_accredibleattribute">Accredible Attribute</label>
        <select class="form-control" name="{{section}}[{{index}}][accredibleattribute]" id="id_{{section}}_{{index}}_accredibleattribute" data-initial-value="{{accredibleattribute}}">
            {{#accredibleoptions}}
                <option value="{{value}}">{{name}}</option>
            {{/accredibleoptions}}
        </select>
        <div class="form-control-feedback invalid-feedback">Duplicate attribute</div>
    </div>

    <div class="d-flex flex-column justify-content-end col-md-1" id="id_{{section}}_{{index}}_delete_action">
        <button type="button" data-id="{{index}}" data-section="{{section}}" class="remove-line btn btn-small">
            <i class="icon fa fa-trash text-danger fa-fw"></i>
        </button>
    </div>
</div>
